    "license": "MIT",
    "homepage": "https://composer.library.com",
    "type": "composer-plugin",
    "require": {
        "apply/library": "*",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Apply\\Composer\\": "/"
        }
    },
    "extra": {
